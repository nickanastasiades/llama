<!-- Validation failure messages -->
<% if @project.errors.any? %>
  <% @project.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Project #<%= @project.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_project/<%= @project.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @project.title %>">
      </div>

      <!-- Label and input for type -->
      <div class="form-group">
        <label for="project_type" class="control-label">
          Type
        </label>

        <input type="text" id="project_type" name="project_type" placeholder="Project Type" class="form-control" value="<%= @project.project_type %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @project.description %>">
      </div>

      <!-- Label and input for status -->
      <div class="form-group">
        <label for="status" class="control-label">
          Status
        </label>

        <input type="text" id="status" name="status" placeholder="Status" class="form-control" value="<%= @project.status %>">
      </div>

      <!-- Label and input for version -->
      <div class="form-group">
        <label for="version" class="control-label">
          Version
        </label>

        <input type="text" id="version" name="version" placeholder="Version" class="form-control" value="<%= @project.version %>">
      </div>

      <!-- Label and input for designer_id -->
      <div class="form-group">
        <label for="designer_id" class="control-label">
          Designer
        </label>

        <input type="text" id="designer_id" name="designer_id" placeholder="Designer" class="form-control" value="<%= @project.designer_id %>">
      </div>

      <!-- Label and input for hours_used -->
      <div class="form-group">
        <label for="hours_used" class="control-label">
          Hours used
        </label>

        <input type="text" id="hours_used" name="hours_used" placeholder="Hours used" class="form-control" value="<%= @project.hours_used %>">
      </div>

      <button class="btn btn-warning">
        Update Project
      </button>
      or
      <a href="/projects/<%= @project.id %>">Cancel</a>
    </form>
  </div>
</div>
