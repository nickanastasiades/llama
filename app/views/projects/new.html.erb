<!-- Validation failure messages -->
<% if @project.errors.any? %>
  <% @project.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>
<form action="/create_project" method="post">
<div class="row">
  <div class="col-md-9 light-body">
    <div class="row">
      <div class="col-md-2 progresss mobile-only">
        <img src="/images/progress-2.png" width="100"/>
      </div>
    <div class="col-md-10">
    <h1 class="page-title">Project Details</h1>
  </div>
  <div class="col-md-2 progresss desktop-only">
    <img src="/images/progress-2.png" width="100"/>
  </div>
</div>

      <!-- Hidden input for authenticity token to protect from forgery -->

      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Project Name
        </label>

        <input type="text" id="title" name="title" placeholder="What do you want to call the project?" class="form-control" value="<%= @project.title %>">
      </div>

      <!-- Label and input for type -->
      <div class="form-group">

        <input type="hidden" id="project_type" name="project_type" placeholder="Project Type" class="form-control" value="<%= @type %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <br><label for="description" class="control-label">
          Describe Your Project
        </label>

        <textarea rows="6" id="description" name="description" placeholder="The more info you include here the more accurate our design will be." class="form-control" value="<%= @project.description %>"></textarea>
      </div>

      <!-- Label and input for status -->
      <div class="form-group">

        <input type="hidden" id="status" name="status" placeholder="Status" class="form-control" value="Not Started">
      </div>

      <!-- Label and input for version -->
      <div class="form-group">

        <input type="hidden" id="version" name="version" placeholder="Version" class="form-control" value="1.0">
      </div>


<img src="/images/bring-it.png" style="width: 100%;max-width:500px; margin-top: 40px; margin-bottom:-20px;"/>
  </div>
  <div class="col-md-3 dark-body scrollify no-padding text-center">
    <button class="big-next"><h2 class="next-btn"><img src="/images/next-arrow.png" style="width: 70px;"><br>
      Next Up</h2><h4 class="next-sub-btn">Upload Files</h4></button>
    </div>

</div>
</form>
