<div class="row">
  <div class="col-md-9 light-body">
    <div class="row">
      <div class="col-md-2 progresss mobile-only">
        <img src="/images/progress-3.png" width="100"/>
      </div>
    <div class="col-md-10">
    <h1 class="page-title">Project Submitted</h1>
  </div>
</div>

      <!-- Hidden input for authenticity token to protect from forgery -->

      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

<p style="text-align:center; font-size: 240px; color: #80b33c;line-height: 0px;margin: 0;"><i class="fa fa-check" aria-hidden="true"></i></p>


      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Project Name
        </label>

        <input type="text" id="title" name="title" placeholder="What do you want to call the project?" class="form-control" value="<%= @project.title %>">
      </div>

      <!-- Label and input for type -->
      <div class="form-group">

        <input type="hidden" id="project_type" name="project_type" placeholder="Project Type" class="form-control" value="<%= @type %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <br><label for="description" class="control-label">
          Describe Your Project
        </label>

        <textarea rows="6" id="description" name="description" placeholder="The more info you include here the more accurate our design will be." class="form-control" value="<%= @project.description %>"></textarea>
      </div>

      <!-- Label and input for status -->
      <div class="form-group">

        <input type="hidden" id="status" name="status" placeholder="Status" class="form-control" value="Not Started">
      </div>

      <!-- Label and input for version -->
      <div class="form-group">

        <input type="hidden" id="version" name="version" placeholder="Version" class="form-control" value="1.0">
      </div>

      <p style="text-align:left; margin-top: 30px;"><button type="submit" class="blue-btn-lg">Next</button></p>



<img src="/images/bring-it.png" style="width: 100%;max-width:500px; margin-top: 10px; margin-bottom:-20px;"/>
  </div>
  <div class="col-md-3 side-menu scrollify no-padding text-left">
    <div class="side-progress"><span class="sidelink disabled" href="/projects/start"><i class="fa fa-check-circle" aria-hidden="true"></i> Project Type</span></div>
    <div class="side-progress"><span class="sidelink disabled" href="javascript:history.back()"><i class="fa fa-check-circle" aria-hidden="true"></i> Project Details</span></div>
    <div class="side-progress"><span class="sidelink disabled"><i class="fa fa-check-circle" aria-hidden="true"></i> Upload Files</span></div>
    <div class="side-progress"><span class="sidelink disabled"><i class="fa fa-circle" aria-hidden="true"></i> Review Project</span></div>
    </div>

</div>
</form>
