<div class="row">
  <div class="col-md-4 dark-body">
    <h2 class="hello">Hello Nick,</h2>
    <h2 class="intro">What can we create today?</h2>
    <div style="margin-bottom:50px;"> <a href="/projects/new/" class="blue-btn-lg">New Project</a></div>
  </div>
  <div class="col-md-8 light-body">
    <h1 class="page-title">My Projects</h1>
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Type</th>
        <th>Description</th>
        <th>Status</th>
        <th>Version</th>
        <th>Designer</th>
        <th>Hours used</th>
        <th>Actions</th>
      </tr>

      <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.type %></td>
        <td><%= project.description %></td>
        <td><%= project.status %></td>
        <td><%= project.version %></td>
        <td><%= project.designer_id %></td>
        <td><%= project.hours_used %></td>
        <td>
          <a href="/projects/<%= project.id %>" class="btn btn-primary">Show</a>
          <a href="/projects/<%= project.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_project/<%= project.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
