<div class="page-header">
  <h1>
    Designers
    <a href="/designers/new" class="btn btn-lg btn-success">New Designer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Company</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>

      <% @designers.each do |designer| %>
      <tr>
        <td><%= designer.first_name %></td>
        <td><%= designer.last_name %></td>
        <td><%= designer.email %></td>
        <td><%= designer.company_id %></td>
        <td><%= designer.role %></td>
        <td>
          <a href="/designers/<%= designer.id %>" class="btn btn-primary">Show</a>
          <a href="/designers/<%= designer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_designer/<%= designer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
