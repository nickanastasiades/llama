<div class="page-header">
  <h1>
    Files
    <a href="/files/new" class="btn btn-lg btn-success">New File</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Project</th>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @files.each do |file| %>
      <tr>
        <td><%= file.project_id %></td>
        <td><%= file.name %></td>
        <td><%= file.description %></td>
        <td>
          <a href="/files/<%= file.id %>" class="btn btn-primary">Show</a>
          <a href="/files/<%= file.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_file/<%= file.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
