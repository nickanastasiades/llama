<!-- Validation failure messages -->
<% if @item.errors.any? %>
  <% @item.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>
<div class="row">
  <div class="col-md-9 light-body">

    <form action="/revise_item" method="post" enctype="multipart/form-data">

    <div class="row">
      <div class="col-md-2 progresss mobile-only">
        <img src="/images/progress-3.png" width="100"/>
      </div>
    <div class="col-md-10">
    <h1 class="page-title">Upload Files</h1>
  </div>
</div>


      <!-- Hidden input for authenticity token to protect from forgery -->

      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">

        <input type="hidden" id="name" name="name" placeholder="Name" class="form-control" value="<%= @item.name %>">
      </div>

        <!-- Label and input for name -->
        <div class="form-group">

          <input type="hidden" id="project_id" name="project_id" placeholder="Project ID" class="form-control" value="<%= @item.project_id %>">
        </div>

        <!-- Label and input for upload -->
        <div class="form-group">

<input name ="url" type="file" class="form-control" required>

      </div>

<!-- Label and input for description -->
<div class="form-group">
  <label for="description" class="control-label">
    Describe Your File
  </label>

  <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @item.description %>">
</div>

<label class="control-label">
  Uploaded Files
</label>
<table class="table table-striped table-hover upload-table" style="margin-top: 5px;">

  <% @project.items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.description %></td>
    <td><a href="/delete_item/<%= item.id %>"><img src="/images/x-icon.png" class="x-icon"/></a></td>
  </tr>
  <% end %>
</table>


<p style="text-align:center; margin-top: 30px;"><button type="submit" class="blue-btn-lg">Add More</button></p>

<hr style="margin-bottom: 30px; margin-top: 0px;"/>


<p style="text-align:center; margin-top: 0px;">
  <label for="description" class="control-label" style="margin-bottom:30px">
    Ready?
  </label><br/>
  <a class="green-btn-huge" href="/projects/revise-submit/<%= @item.project_id %>">Submit Revision</a></p><br/>


  </div>
  <div class="col-md-3 side-menu scrollify no-padding text-left">
